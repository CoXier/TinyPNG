<idea-plugin>
    <id>com.coxier.TinyPNG</id>
    <name>TinyPNG</name>
    <vendor email="justcoxier@gmail.com" url="https://github.com/CoXier/TinyPNG">CoXier</vendor>

    <description>IDEA plugin for TinyPNG for https://tinypng.com/</description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="TinyPNG.action.TinyPNGAction" class="action.TinyPNGAction" text="TinyPNG"
                icon="/icons/icon.png"
                description="Smart PNG and JPEG compression">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>